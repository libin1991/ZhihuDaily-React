$huBlue = #00a2ea;
$huWhite = #f9f9f9;
$fontWhite =#76787e;
$headerFont = 40;
//定义一个变量和一个mixin
$baseFontSize = 75; //默认基准font-size
px2rem(name, px) {
  {name}: (px / $baseFontSize ) * 1rem;
}

f_r() {
  float: right;
}

f_l() {
  float: left;
}

//清除浮动
clearFloat() {
  overflow hidden;
}



// 定义字体大小,字体颜色
mx_fc($size, $color)
  px2rem('font-size', $size);
  color:$color;

// 定义宽高
mx_wh($width, $height)
  width: $width;
  height: $height;

mx_wh_r($width, $height)
  px2rem('width', $width);
  px2rem('height', $height);

// 定义宽高行高
mx_whlh($width, $height, $line-height)
  px2rem('width', $width);
  px2rem('height', $height);
  px2rem('line-height', $line-height);

// 定义高行高
mx_hlh($height, $line-height)
  px2rem('height', $height);
  px2rem('line-height', $line-height);

//绝对定位居中
mx_posc()
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);

// 绝对定位定义top,left值
mx_postl($top, $left)
  position: absolute;
  top: $top;
  left: $left;

mx_postl_r($top, $left)
  position: absolute;
  px2rem('top', $top);
  px2rem('left', $left);

// 绝对定位定义top,right值
mx_postr($top, $right)
  position: absolute;
  top: $top;
  right: $right;

// 绝对定位定义bottom,left值
mx_posbl($bottom, $left)
  position: absolute;
  bottom: $bottom;
  left: $left;

mx_posbl_r($bottom, $left)
  position: absolute;
  px2rem('bottom', $bottom);
  px2rem('left', $left);

// 绝对定位定义bottom,right值
mx_posbr($bottom, $right)
  position: absolute;
  bottom: $bottom;
  right: $right;

// fixed定位定义top,left值
mx_poftl($top, $left)
  position: fixed;
  top: $top;
  left: $left;

// fixed定位定义top,right值
mx_poftr($top, $right)
  position: fixed;
  top: $top;
  right: $right;

// fixed定位定义bottom,left值
mx_pofbl($bottom, $left)
  position: fixed;
  bottom: $bottom;
  left: $left;

// fixed定位定义bottom,right值
mx_pofbr($bottom, $right)
  position: fixed;
  bottom: $bottom;
  right: $right;

mx_poftb($top, $bottom)
  position: fixed;
  bottom: $bottom;
  top: $top;

// flex 布局盒模型
mx_flex()
  display: -webkit-box;
  display: -moz-box;
  display: flex;

/* flex容器 */

// flex 布局宽度
mx_flex_item($num)
  -webkit-box-flex: $num;
  -moz-box-flex: $num;
  flex: $num;
  box-flex: $num;
  min-width: 0;

// flex布局容器属性设置
mx_flex_content()
  -moz-flex-direction: row;
  -o-flex-direction: row;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  flex-direction: row;
  -moz-flex-wrap: wrap;
  -o-flex-wrap: wrap;
  flex-wrap: wrap;
  -webkit-box-pack: justify;
  -moz-box-pack: justify;
  justify-content: space-between;

// flex 水平垂直居中
mx_flex_mid()
  display: -webkit-box;
  display: -moz-box;
  display: flex;
  -webkit-box-pack: center;
  -moz-box-pack: center;
  justify-content: center;
  -webkit-box-align: center;
  -moz-box-align: center;
  align-items: center;

// 圆角
mx_bdrs($radius)
  border-radius: $radius;

mx_bdrs_r($radius)
  px2rem('border-radius', $radius);
// 边框
mx_bd($num, $color)
  border: $num solid $color;

// border-box
mx_brbox()
  -moz-box-sizing: border-box;
  box-sizing: border-box;

// 多行文本显示省略号
mx_more_ellipsis()
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;

// 单行文本显示省略号
mx_single_ellipsis()
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;

mx_pagepadding()
  padding: 20px 30px;
  font-size: 12px;
  text-align: left;

